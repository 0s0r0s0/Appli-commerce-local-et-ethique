{% extends 'base.html.twig' %}

{% block title %}Producer{% endblock %}

{% block body %}
    <h1>Producer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producer.id }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ producer.siret }}</td>
            </tr>
            <tr>
                <th>Firm_name</th>
                <td>{{ producer.firmName }}</td>
            </tr>
            <tr>
                <th>Firm_adress</th>
                <td>{{ producer.firmAdress }}</td>
            </tr>
            <tr>
                <th>Firm_postal_code</th>
                <td>{{ producer.firmPostalCode }}</td>
            </tr>
            <tr>
                <th>Firm_city</th>
                <td>{{ producer.firmCity }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ producer.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ producer.image }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ producer.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>
    <div class="ml-4">
    <a class=" btn btn-info text-white" type="button" href="{{ path('producer_index') }}">Retour</a>

    {% if producer.user.id == app.user.id or is_granted('ROLE_ADMIN') %}
        <a class=" btn btn-danger text-white" type="button" href="{{ path('producer_edit', {'id': producer.id}) }}">Modifier</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('producer/_delete_form.html.twig') }}
    {% endif %}
    </div>
{% endblock %}
