<form method="post" action="{{ path('producer_delete', {'id': producer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producer.id) }}">
    <button class="btn btn-danger text-white mt-2 mr-4 ml-auto">Supprimer le producteur</button>
</form>
