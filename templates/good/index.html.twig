{% extends 'base.html.twig' %}

{% block title %}Good index{% endblock %}

{% block body %}
    <h1>Good index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Buying_minimum</th>
                <th>Image</th>
                <th>Stock</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for good in goods %}
            <tr>
                <td>{{ good.id }}</td>
                <td>{{ good.description }}</td>
                <td>{{ good.buyingMinimum }}</td>
                <td>{{ good.image }}</td>
                <td>{{ good.stock }}</td>
                <td>{{ good.label }}</td>
                <td>
                    <a href="{{ path('good_show', {'id': good.id}) }}">show</a>
                    <a href="{{ path('good_edit', {'id': good.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('good_new') }}">Create new</a>
{% endblock %}
