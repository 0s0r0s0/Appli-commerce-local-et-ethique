{% extends 'base.html.twig' %}

{% block title %}Login {% endblock %}

{% block body %}

    {{ include('home/_menu.html.twig') }}

    <div class="container">
        <div class="row">
            <div class="card-body col-5">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey | trans( error.messagedata, 'security' ) }}
                    </div>
                {% endif %}
                <form method="POST" action="{{ path('login') }}">
                    <div class="form-group">
                        <label for="username">Identifiant</label>
                        <input id="username" name="_username" type="text" class="form-control" value="{{ last_username }}" placeholder="adresse@mail.fr">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input id="password" name="_password" type="password" class="form-control" placeholder="*******">
                    </div>
                    <button type="submit"
                            class="btn btn-outline-primary btn-lg">Connexion</button>
                </form>
            </div>
        </div>

            <div class="card-body">
                <div class="font-weight-bold">Si vous n'avez encore de compte :
                <a class="btn btn-success text-white ml-2" type="button" href="{{ path('user_new') }}">Cr√©er le maintenant !</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
